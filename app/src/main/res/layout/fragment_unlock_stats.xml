<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="@dimen/paddingLarge"
    android:clickable="true"
    tools:context=".Fragments.UnlockStats"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="@dimen/large2"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/smallMedText2"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="@string/unlock_stats"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addRecordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_3"
            android:drawableStart="@drawable/add_white"
            android:elevation="@dimen/small3"
            android:text="@string/add_record"
            android:padding="@dimen/paddingMedium"
            android:layout_marginVertical="@dimen/marginSmall"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </LinearLayout>

</FrameLayout>